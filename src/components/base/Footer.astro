---
import Social from "@components/common/Social.astro";
import { IoLocationSharp, IoMailSharp, IoCallSharp } from "react-icons/io5";
---

<footer class="glass container mt-8 lg:my-4 lg:rounded-lg">
  <div class="px-4 py-8 lg:py-12">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- About CPC -->
      <div>
        <h3 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">
          Sobre el CPC
        </h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">
          Comité de Participación Ciudadana del Sistema Anticorrupción del
          Estado de Tlaxcala
        </p>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">
          Contacto
        </h3>
        <ul class="space-y-3 text-sm text-gray-600 dark:text-gray-300">
          <li class="flex items-start">
            <IoLocationSharp
              className="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-blue-600"
            />
            <span>Reforma 103, Miraflores, 90114 Ocotlán, Tlax.</span>
          </li>
          <li class="flex items-center">
            <IoMailSharp className="mr-2 h-5 w-5 flex-shrink-0 text-blue-600" />
            <a href="mailto:contactocpctlaxcala@gmail.com" class="hover:text-blue-600">
              contactocpctlaxcala@gmail.com
            </a>
          </li>
          <li class="flex items-center">
            <IoCallSharp className="mr-2 h-5 w-5 flex-shrink-0 text-blue-600" />
            <a href="tel:+522461892520" class="hover:text-blue-600">
              246 189 25 20
            </a>
          </li>
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">
          Enlaces Rápidos
        </h3>
        <ul class="space-y-2 text-sm text-gray-600 dark:text-gray-300">
          <li>
            <a href="/nosotros" class="hover:text-blue-600"
              >¿Qué es el CPC?</a
            >
          </li>
          <li>
            <a href="/normatividad" class="hover:text-blue-600">Normatividad</a>
          </li>
          <!-- <li>
            <a href="/sesiones" class="hover:text-blue-600">Sesiones</a>
          </li>
          <li>
            <a href="/contacto" class="hover:text-blue-600">Contacto</a>
          </li> -->
        </ul>
      </div>

      <!-- Social Media -->
      <div>
        <h3 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">
          Redes Sociales
        </h3>
        <div class="flex space-x-4">
          <Social
            links={{
              facebook: "https://www.facebook.com/CPCTlaxcala",
              twitter: "https://twitter.com/CPCTlaxcala",
              youtube: "https://www.youtube.com/CPCTlaxcala",
            }}
          />
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 border-t border-gray-200 pt-8 dark:border-gray-700">
      <p class="text-center text-sm text-gray-600 dark:text-gray-300">
        © {new Date().getFullYear()} Comité de Participación Ciudadana del
        Sistema Anticorrupción del Estado de Tlaxcala. Todos los derechos
        reservados.
      </p>
    </div>
  </div>
</footer>
