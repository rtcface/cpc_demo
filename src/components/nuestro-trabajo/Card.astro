---
import { Image } from "astro:assets";
import type { NuestroTrabajoEntry } from "@/types";

interface Props {
  entry: NuestroTrabajoEntry;
}

const { entry } = Astro.props;
const { title, image, imageAlt, fotos } = entry.data;

// Convertir rutas @assets/ a rutas que funcionen en el navegador
const convertAssetPath = (path: string) => {
  if (path.startsWith('@assets/')) {
    return path.replace('@assets/', '/src/assets/');
  }
  return path;
};
---

<div
  class="h-full m-2 pl-0 bg-gradient-to-br gradient rounded-lg intersect:animate-fadeUp opacity-0"
>
  <div class="glass h-full rounded-lg">
    <a class="group hover:opacity-100" href={`/nuestro-trabajo/${entry.id}`}>
      <div class="relative rounded-lg pb-9/16 overflow-hidden">
        {
          fotos && Array.isArray(fotos) && fotos.length > 0 ? (
            fotos.map((foto, idx) => (
              <img
                class="absolute rounded-lg object-cover w-full h-full group-hover:scale-[105%] transition-all duration-300"
                src={convertAssetPath(foto)}
                alt={imageAlt}
                loading={idx === 0 ? "eager" : "lazy"}
                style={idx === 0 ? {} : { display: "none" }}
              />
            ))
          ) : (
            image && (
              <Image
                class="absolute rounded-lg object-cover w-full h-full group-hover:scale-[105%] transition-all duration-300"
                src={image}
                alt={imageAlt}
                width={1280}
                height={720}
                loading="eager"
              />
            )
          )
        }
        <div
          class="glass-t absolute text-center rounded-lg px-2 py-1 top-[50%] left-[50%] -translate-x-[50%] -translate-y-[50%]"
        >
          <h4 class="">
            {title}
          </h4>
        </div>
      </div>
    </a>
  </div>
</div>
