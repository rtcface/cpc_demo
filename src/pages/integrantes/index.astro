---
import type { IntegrantesEntry } from "@/types";
import CollectionLayout from "@components/integrantes/CollectionLayout.astro";
import { getEntries } from "@lib/contentParser";
import { getIndex } from "@lib/contentParser";
import { sortByTitle } from "@lib/sortFunctions";

const authorIndex = await getIndex("integrantes") as IntegrantesEntry;
const entries = await getEntries("integrantes", sortByTitle) as IntegrantesEntry[];
---

<CollectionLayout integranteIndex={authorIndex} entries={entries} />
